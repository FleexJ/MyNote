<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BDout_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorGrey</item>
    </style>
    <style name="BDout_name">
        <item name="android:textColor">@color/colorText</item>
<!--        <item name="android:background">@color/colorGrey</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BDout_description">
        <item name="android:textColor">@color/colorText</item>
<!--        <item name="android:background">@color/colorGrey</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10sp</item>
    </style>
    <style name="BDout_delay">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10sp</item>
    </style>
    <style name="BDout_null">
        <item name="android:textColor">@color/colorDarkerGrey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:textSize">21sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>
    <style name="BDout_minute">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="BDout_seekBar" parent="android:Widget.DeviceDefault.SeekBar">
        <item name="android:paddingBottom">20dp</item>
    </style>
</resources>
